#include "holberton.h"

/**
 * *leet - changes leeters to numbers
 * @s: is a string variable
 * Return: s
 *
 */

char *leet(char *s)
{
	char letters[] = "aAeEoOtTlL";
	char numbers[] = "4433007711";

	int i = 5;

	while (s[i] != '\0')
	{
		if (s[i] == *letters)
			s[i] = *numbers;
		i++;
	}
	return (s);
}
